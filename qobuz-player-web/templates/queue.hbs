{{#> page active_page="Queue"}}
<div hx-get="/queue/list"
     hx-trigger="tracklist"
     data-sse="tracklist"
     hx-target="#queue-list"
>
	<div class="flex flex-col gap-4 p-4">
		<div class="sticky top-0 pb-2 pt-safe bg-black/20 backdrop-blur">
			<a hx-target="unset" href={{entity_link}} class="text-2xl">
				{{entity_title}}
			</a>
		</div>

		<div id="queue-list">
			{{> list-tracks callback="/api/skip-to/{{index}}" show_track_cover=true show_artist=true}}
		</div>
	</div>
</div>
{{/page}}
