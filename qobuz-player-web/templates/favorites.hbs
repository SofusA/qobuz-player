{{#> page active_page="NowPlaying"}}
<div class="flex flex-col px-4">
	<div class="flex sticky top-0 flex-col flex-grow gap-4 pb-2 max-h-full pt-safe-or-4 bg-black/80 backdrop-blur">
		<h1 class="text-2xl">Favorites</h1>
		<div class="flex justify-between group *:rounded-full *:px-2 *:py-1 *:transition-colors">
			<a href="albums" class="{{#if (eq tab 'albums')}}bg-blue-800{{/if}}" preload="mouseover" preload-images=true>
				albums
			</a>
			<a href="artists" class="{{#if (eq tab 'artists')}}bg-blue-800{{/if}}" preload="mouseover" preload-images=true>
				Artists
			</a>
			<a href="playlists" class="{{#if (eq tab 'playlists')}}bg-blue-800{{/if}}" preload="mouseover" preload-images=true>
				Playlists
			</a>
		</div>

		{{#if (eq tab 'albums')}}
		albums
		
		{{else if (eq tab 'artists')}}
		artists
		
		{{else}}
		playlists
		
		{{/if}}
	</div>
</div>
{{/page}}
