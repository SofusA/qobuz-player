{
  "scripts": {
    "build": "tailwindcss -i assets/tailwind.css -o assets/styles.css --minify",
    "watch": "tailwindcss -i assets/tailwind.css -o assets/styles.css --watch --minify",
    "format": "prettier -w \"**/*.html\" --parser angular",
    "build-assets": "pwa-asset-generator -m assets/manifest.json -i dummy-index.html -b black assets/favicon.svg assets/pwa"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.2",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "pwa-asset-generator": "^8.1.2",
    "tailwindcss": "^4.1.18",
    "tailwindcss-safe-area": "^1.3.0"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "dependencies": {
    "tailwindcss-animate": "^1.0.7"
  }
}
